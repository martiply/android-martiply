<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    style="@style/cardLight"
    app:contentPadding="@dimen/spacing_medium"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/grey_dk4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey_dk4"
        android:orientation="vertical"
        android:paddingBottom="@dimen/spacing_xlarge"
        android:paddingLeft="@dimen/spacing_medium"
        android:paddingRight="@dimen/spacing_medium"
        android:paddingTop="@dimen/spacing_medium">

        <TextView
            style="@style/textHeadReverse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/spacing_large"
            android:text="@string/feature" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/feature_img"
                style="@style/imgInParagraph"
                android:src="@drawable/wp_crumpled_paper" />

            <TextView
                android:id="@+id/feature_text"
                style="@style/textParagraphReverse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/spacing_large" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
