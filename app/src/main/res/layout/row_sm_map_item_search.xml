<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/top"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/spacing_medium">

        <ImageView
            android:id="@+id/icon"
            style="@style/imgRow"
            android:layout_marginRight="@dimen/spacing_medium"
            android:contentDescription="@string/iv_icon"
            android:transitionName="@string/trans_gallery_img" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/store"
                style="@style/textRowItemStoreName" />

            <TextView
                android:id="@+id/name"
                style="@style/textRowItemName"
                android:paddingTop="@dimen/spacing_small" />

            <TextView
                android:id="@+id/price"
                style="@style/textRowItemPrice"
                android:paddingTop="@dimen/spacing_small" />
        </LinearLayout>
    </LinearLayout>

    <View style="@style/dividerLight" />

</LinearLayout>